<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.francisco.w3d3.ProfileActivity">

    <LinearLayout
        android:background="@drawable/white_button_boarder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_gravity="center_vertical"
            android:id="@+id/img"
            android:src="@drawable/ic_refresh_black_24dp"
            android:scaleType="fitCenter"
            android:layout_width="130dp"
            android:background="@color/white"
            android:layout_height="130dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@drawable/gray_button_boarder"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1.2"
                    android:text="Name:"
                    style="@style/TextViews"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tvName"
                    style="@style/TextViews2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@drawable/gray_button_boarder"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1.2"
                    android:text="Bio:"
                    style="@style/TextViews"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tvBio"
                    style="@style/TextViews2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@drawable/gray_button_boarder"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1.2"
                    android:text="Company:"
                    style="@style/TextViews"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tvCompany"
                    style="@style/TextViews2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@drawable/gray_button_boarder"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1.2"
                    android:text="Location:"
                    style="@style/TextViews"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tvLocation"
                    style="@style/TextViews2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvReposList"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <info.hoang8f.widget.FButton
        android:id="@+id/btnRepos"
        style="@style/ButtonsWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to repositories"
        fbutton:buttonColor="@color/fbutton_color_emerald"
        fbutton:cornerRadius="10dp"
        fbutton:shadowColor="@color/fbutton_color_midnight_blue"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="6sp" />

</LinearLayout>
